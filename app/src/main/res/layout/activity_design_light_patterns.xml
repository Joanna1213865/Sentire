<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesignLightPatterns">


    <org.eazegraph.lib.charts.PieChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="8dp"
        app:egLegendTextSize="18sp"
        app:egUsePieRotation="true"
        app:egValueTextSize="36sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/rl3"
        android:background="@color/colorBackground3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/ll1"
            >

            <Button
                android:id="@+id/btnPlay3"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Play"
                android:textColor="@color/secondaryText"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAdd3"
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Add"
                android:textColor="@color/secondaryText"
                android:textStyle="bold"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Clear"
                android:textColor="@color/secondaryText"
                android:id="@+id/btnClear3" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_above="@id/ll1"
            android:id="@+id/rgEmotions"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/rbHappy"
                android:button="@drawable/icon_happy0"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/rbFearful"
                android:button="@drawable/icon_fearful0"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/rbSurprised"
                android:button="@drawable/icon_surprised0"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/rbSad"
                android:button="@drawable/icon_sad0"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/rbDisgusted"
                android:button="@drawable/icon_disgusted0"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/rbAngry"
                android:button="@drawable/icon_angry0"/>

        </RadioGroup>

    </RelativeLayout>

</RelativeLayout>
